---
import '@fontsource-variable/caveat';
---

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const emailInput = document.getElementById('emailInput');
    const nameInput = document.getElementById('nameInput');
    const commentInput = document.getElementById('commentInput');
    const submitButton = document.getElementById('submitButton');

    if (submitButton !== null) {
      submitButton.addEventListener('click', () => {
        const email = emailInput.value.trim();
        const name = nameInput.value.trim();
        const comment = commentInput.value.trim();

        console.log('Form Data:');
        console.log('Email:', email);
        console.log('Name:', name);
        console.log('Comment:', comment);

        alert('Проверьте консоль на наличие отправленных данных!');
      });
    }
  });
</script>

<div class="flex justify-center items-center min-h-screen bg-[#EAE7DC] p-6">
  <div class="max-w-lg w-full bg-[#D8C3A5] p-6 rounded-lg shadow-lg">
    <h1 class="text-4xl font-caveat text-[#E85A4F] text-center mb-6">Свяжитесь со мной</h1>
    
    <div class="mb-4">
      <label for="email" class="block text-lg font-medium text-[#5C5753]">Email</label>
      <input type="email" id="emailInput" class="block w-full rounded-md px-3 py-2 text-gray-900 bg-white border border-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-[#E85A4F] focus:outline-none" placeholder="you@example.com">
    </div>
    
    <div class="mb-4">
      <label for="name" class="block text-lg font-medium text-[#5C5753]">Имя</label>
      <input type="text" id="nameInput" class="block w-full rounded-md px-3 py-2 text-gray-900 bg-white border border-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-[#E85A4F] focus:outline-none" placeholder="Ваше имя">
    </div>
    
    <div class="mb-4">
      <label for="comment" class="block text-lg font-medium text-[#5C5753]">Ваше сообщение</label>
      <textarea id="commentInput" rows="4" class="block w-full rounded-md px-3 py-2 text-gray-900 bg-white border border-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-[#E85A4F] focus:outline-none" placeholder="Введите ваше сообщение"></textarea>
    </div>
    
    <button id="submitButton" class="w-full rounded-md bg-[#E85A4F] px-4 py-2 text-lg font-semibold text-white shadow-sm hover:bg-[#D75A4F] focus:ring-2 focus:ring-offset-2 focus:ring-[#E85A4F]">
      Отправить
    </button>
  </div>
</div>
